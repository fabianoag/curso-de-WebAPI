
@{
    /**/

    ViewBag.Title = "Index";
}

@model IList<SiteAspNetMVC.Models.AlunoDTO>

@*<form id="form1" action="/Home/Index" method="get">*@
    <div class="titulo-lista-alunos">
        <h1 class="text-center">Lista de alunos</h1>

        <a id="cadastraModal" class="btn btn-primary" data-target="#myModal" data-toggle="modal" style="cursor:pointer;float:right; margin-top:5px;">Cadastrar</a>
    </div>


    @if (Model != null)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Telefone</th>
                    <th>Ra</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.nome</td>
                        <td>@item.sobrenome</td>
                        <td>@item.telefone</td>
                        <td>@item.ra</td>
                        <td>
                            <button type="button" id="btnEdit" data-target="#myModal" data-toggle="modal" style="cursor:pointer;" class="btn btn-success" onclick="edit(@item.Id,'@item.nome','@item.sobrenome','@item.telefone',@item.ra)">
                                <span class="glyphicon glyphicon-pencil btn-xs" aria-hidden="true"></span>
                            </button>
                            <button type="button" id="btnDelete" data-target="#myModalDelete" data-toggle="modal" style="cursor:pointer;" class="btn btn-danger" onclick="del(@item.Id, '@item.nome')">
                                <span class="glyphicon glyphicon-trash btn-xs" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

@*</form>*@
<br />
@using (Html.BeginForm("enviarForm", "Home", FormMethod.Post))
{
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                    <h4 class="modal-title" id="myModalTitulo"></h4>
                </div>
                <div class="modal-body">
                    @Html.Hidden("tipo")
                    @Html.Hidden("Id")
                    <label>Nome: </label>
                    @Html.TextBox("nome", "", new { @class = "form-control", @placeholder = "Digite o nome" })<br />
                    <label>Sobrenome: </label>
                    @Html.TextBox("sobrenome", "", new { @class = "form-control", @placeholder = "Digite o sobrenome" })<br />
                    <label>Telefone: </label>
                    @Html.TextBox("telefone", "", new { @class = "form-control", @placeholder = "Digite o telefone" })<br />
                    <label>RA: </label>
                    @Html.TextBox("ra", "", new { @class = "form-control", @placeholder = "Digite o RA" })<br />
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submitModal" class="btn btn-primary" value="1">Cadastrar</button>
                    <button type="button" id="cancelarModal" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("excluirAluno", "Home", FormMethod.Post))
{
    <!-- Modal -->
    <div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        @Html.Hidden("IdDel")
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                    <h4 class="modal-title" id="myModalTituloDel"></h4>
                </div>
                <div class="modal-body">
                    <h3 id="modalBodyDel"></h3>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submitModal" class="btn btn-primary" value="1">Excluir</button>
                    <button type="button" id="cancelarModal" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

